{
    //required
    "manifest_version" : 2,
    "name" : "InstaGet",
    "version" : "1.0.0",

    "permissions" : [
        "downloads",
        "background"
    ],
    /*
    "background" : {
        "scripts" : ["main.js"]
    },
    */

    "content_scripts" : [{
        "matches" : ["https://www.instagram.com/*"],
        "js" : ["jquery.js","main.js"],
        "css" : ["button.css"]
    }
    ],

    "description" : "Down instagram image in one clicl",
    "icons" : {
        "16" : "icons/icon16.png",
        "128" : "icons/icon128.png"
        },

    "browser_action" : {
        "default_title" : "Insta Get Plugin"        
    }
}